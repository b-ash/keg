@import nib
@import colors

body
  background-color: $background

.bold
  font-weight: bold

.large-text
  font-size: 30px

.bar-span
  height: 50px
  background-color: #EEE
  color: #333
  font: 30px/1.2 "Abril Fatface"
  letter-spacing: -2px
  line-height: 45px

  .sub-heading
    display: none
    font: 30px/1 "Abril Fatface"
    color: #999
    letter-spacing: -1px
    padding-left: 15px

  &.thin
    height: 1px

  &.footer
    padding-top: 15px
    letter-spacing: 0px
    font: 20px/1.2 "Abril Fatface"

@media (min-width: 768px)
  .bar-span
    height: 100px
    font: 80px/1.2 "Abril Fatface"
    letter-spacing: -5px

    .sub-heading
      display: inline

    &.footer
      padding-top: 40px


.spanning-full
  width: 100%

#inner_content
  margin-left: 200px
  padding: 15px

  .widget
    width: 300px
    height: 150px
    border-radius: 6px
    margin: 0 15px 15px
    padding: 40px
    background-color: $secondary
    color: $text

