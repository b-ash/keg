.dash-widget
  width: 31%
  height: 250px
  margin: 10px
  border: 1px solid #333
  float: left
  margin-right: 5px
  background-color: #2B1A1A

  ul
    list-style: none
    padding: 0

    li
      text-align: center

  span.stat, span.unit
    display: block
    font-size: 50px
    font-weight: bold

  span.stat
    margin: 25px 0 -20px

    &.no-unit
      font-size: 100px
      margin-top: 25px
